<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="login.css" />
  </head>
  <body>
    <div class="parent">
      <form method="post" class="form" name="login">
        <h2>Login</h2>
        <div class="input-form">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            autocomplete="email"
            required
            autofocus
          />
        </div>
        <div class="input-form">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            autocomplete="current-password"
            required
          />
        </div>
        <div class="input-form action-response" style="display: none">
          <p>Invalid credentials</p>
        </div>
        <div class="input-form">
          <button id="login" onclick="login">Login</button>
        </div>
        <div class="input-form">
          <p>Don't have an account? <a href="/auth/register" id="register">Register</a></p>
        </div>
      </form>
    </div>
    <script src="auth.js"></script>
  </body>
</html>
